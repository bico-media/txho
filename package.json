{
	"name": "txho",
	"version": "3.0.2",
	"description": "Get a Bitcoin transaction as JSON for CLI and node",
	"main": "dist/index.js",
	"bin": {
		"txho": "./dist/cli.js"
	},
	"author": "MWulff",
	"license": "Open-BSV",
	"repository": {
		"type": "git",
		"url": "https://github.com/bicomedia/txho.git"
	},
	"scripts": {
		"go": "ts-node src/index.ts",
		"test": "echo Tests are not automated yet",
		"fmt": "prettier --write src/",
		"build": "tsc src/index.ts src/cli.ts --outDir dist/ --allowJs",
		"prepublishOnly": "yarn build && yarn bump",
		"bump": "yarn is-git-clean && bump --tag 'v%s'",
		"is-git-clean": "(git diff --quiet --exit-code --cached && git diff --quiet --exit-code) || (echo Please commit or stash changes && exit 1)"
	},
	"dependencies": {
		"base-64": "^0.1.0",
		"bitcoind-rpc": "0.8.1",
		"bsv": "1.5.3",
		"dotenv": "8.2.0",
		"jshashes": "^1.0.8",
		"json5": "2.1.3"
	},
	"devDependencies": {
		"@types/node": "^14.0.10",
		"ts-node": "8.10.2",
		"typescript": "3.9.3",
		"version-bump-prompt": "6.0.3"
	},
	"keywords": [
		"txo",
		"txid",
		"bitfs",
		"bitwork",
		"BSV",
		"bitcoin sv",
		"bitcoin"
	],
	"prettier": {
		"useTabs": true,
		"printWidth": 100,
		"singleQuote": true,
		"bracketSpacing": false,
		"semi": false
	}
}
